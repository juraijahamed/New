{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HawkTravelmate",
  "version": "0.1.0",
  "identifier": "com.hawktravelmate.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "plugins": {
    "shell": {
      "sidecar": [
        {
          "name": "bin/server-sidecar",
          "command": "bin/server-sidecar",
          "args": [],
          "description": "Node.js Backend Server"
        }
      ]
    }
  },
  "app": {
    "windows": [
      {
        "title": "Hawk Travelmate",
        "height": 800,
        "width": 1280,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}